@{
    Layout = "~/Views/shared/_Layout.cshtml";
}

@model Admin_Panel.Areas.LOC_Country.Models.LOC_CountryModel

<div class="d-flex flex-column">
    <form>
        @Html.HiddenFor(x=>x.CountryID);
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mt-3 mb-3">
            <h2>Add / Update Page</h2>
        </div>
        <div class="mb-3 row form-group">
            <label class="col-sm-2 col-form-label">Country Name</label>
            <div class="col-xl-4">
                <input type="text" class="form-control" asp-for="CountryName" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label">Country Code</label>
            <div class="col-xl-4">
                <input type="text" class="form-control" asp-for="CountryCode" />
                <span asp-validation-for="CountryCode" class="text-danger"></span>
            </div>
        </div>
        <div>
            <button class="btn btn-success" type="submit" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="Save">Add</button>
        </div>
    </form>
</div>
